Get-WmiObject -Class Win32_LogicalDisk -ComputerName "CitrixAppServer1" -Credential (Get-Credential) | Where-Object {$_.DeviceID -eq "C:"} | Select-Object @{Name="VMName";Expression={"CitrixAppServer1"}}, DeviceID, @{Name="DiskSizeGB";Expression={[math]::round($_.Size / 1GB, 2)}}, @{Name="FreeSpaceGB";Expression={[math]::round($_.FreeSpace / 1GB, 2)}}, @{Name="UsedSpaceGB";Expression={[math]::round((($_.Size - $_.FreeSpace) / 1GB), 2)}}, @{Name="PercentUsed";Expression={[math]::round((($_.Size - $_.FreeSpace) / $_.Size) * 100, 2)}}
